name:                gedcom-parser
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/dmitry-oshurkov/gedcom-parser#readme
license:             BSD3
license-file:        LICENSE
author:              Dmitry Oshurkov
maintainer:          dmitry@oshurkov.name
copyright:           2017 Dmitry Oshurkov
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib, Model, JSON
  build-depends:       base >= 4.7 && < 5
                     , regex-pcre-builtin
                     , fclabels
                     , aeson
                     , text
  default-language:    Haskell2010

executable gedcom-parser-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , split
                     , gedcom-parser
                     , bytestring
                     , aeson
                     , aeson-pretty
  default-language:    Haskell2010

test-suite gedcom-parser-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hspec
                     , QuickCheck >= 2
                     , gedcom-parser
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/dmitry-oshurkov/gedcom-parser
